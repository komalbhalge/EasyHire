<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".ui.HomeActivity">

    <ImageView
        android:id="@+id/img_userprofile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_candidate_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/img_userprofile"
        app:layout_constraintRight_toLeftOf="@+id/img_result"
        app:layout_constraintTop_toTopOf="@+id/img_userprofile"
        tools:text="Title" />

    <!-- <TextView
         tools:text="artist"
         android:layout_height="wrap_content"
         android:status="@+status/artist"
         android:textStyle="italic"
         app:layout_constraintRight_toLeftOf="@+status/play"
         android:layout_marginEnd="8dp"
         android:layout_marginStart="8dp"
         android:layout_width="0dp"/>
 -->
    <ImageView
        android:id="@+id/img_result"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_userprofile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_userprofile"
        app:srcCompat="@drawable/ic_rejected" />

    <TextView
        android:id="@+id/tx_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="2 likes kjhfkjgdfkj 2 likes kjhfkjgdfkj 2 likes kjhfkjgdfkjgfkhd 2 likes kjhfkjgdfkjgfkh 2 likes kjhfkjgdfkjgfkhdgfikhsgfisgfi 2 likes kjhfkjgdfkjgfkhdgfikhsgfisgfi 2 likes kjhfkjgdfkjgfkhdgfikhsgfisgfi"
        app:layout_constraintBottom_toBottomOf="@+id/img_userprofile"
        app:layout_constraintLeft_toLeftOf="@+id/tv_candidate_name"
        app:layout_constraintLeft_toRightOf="@+id/img_userprofile"
        app:layout_constraintRight_toLeftOf="@+id/img_result" />


</android.support.constraint.ConstraintLayout>